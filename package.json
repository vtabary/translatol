{
  "name": "translatol",
  "description": "A tool in order to translate XLIFF files",
  "author": "Vincent Tabary <vincent@tabary.me>",
  "repository": {
    "type": "git",
    "url": "https://github.com/vtabary/translatol"
  },
  "homepage": "https://github.com/vtabary/translatol",
  "license": "ISC",
  "version": "0.0.1",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --base-href \"\"",
    "build": "ng build --base-href \"\"",
    "build:prod": "ng build --base-href \"\" --prod",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "postinstall": "electron-builder install-app-deps"
  },
  "main": "electron.js",
  "build": {
    "appId": "com.vtabary.translatol",
    "productName": "Translatol",
    "copyright": "Copyright Â© 2019 Vincent Tabary",
    "files": [
      "dist/translatol",
      "src/electron",
      "electron.js"
    ],
    "directories": {
      "buildResources": "./build",
      "output": "./dist/packages/${os}/${arch}"
    },
    "win": {
      "icon": "./build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {},
    "linux": {
      "icon": "./build/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~8.2.0",
    "@angular/common": "~8.2.0",
    "@angular/compiler": "~8.2.0",
    "@angular/core": "~8.2.0",
    "@angular/forms": "~8.2.0",
    "@angular/platform-browser": "~8.2.0",
    "@angular/platform-browser-dynamic": "~8.2.0",
    "@angular/router": "~8.2.0",
    "@clr/angular": "^2.2.1",
    "@clr/icons": "2.2.1",
    "@clr/ui": "2.2.1",
    "@vtabary/xliff2js": "0.2.1",
    "@webcomponents/custom-elements": "^1.0.0",
    "lodash": "^4.17.15",
    "ngx-electron": "^2.1.1",
    "rxjs": "~6.4.0",
    "tslib": "^1.10.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.802.1",
    "@angular/cli": "~8.2.1",
    "@angular/compiler-cli": "~8.2.0",
    "@angular/language-service": "~8.2.0",
    "@types/jasmine": "~3.3.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^14.0.0",
    "codelyzer": "^5.0.0",
    "electron": "^12.0.0",
    "electron-builder": "^22.0.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "protractor": "~5.4.0",
    "ts-node": "~7.0.0",
    "tslint": "~5.15.0",
    "typescript": "~3.5.3"
  }
}
