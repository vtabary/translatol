{
  "name": "translatol",
  "description": "A tool in order to translate XLIFF files",
  "author": "Vincent Tabary <vincent@tabary.me>",
  "version": "0.1.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/vtabary/translatol"
  },
  "engines": {
    "node": ">=14.15"
  },
  "homepage": "https://github.com/vtabary/translatol",
  "license": "ISC",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --base-href \"\"",
    "build": "ng build --base-href \"\"",
    "build:prod": "ng build --base-href \"\" --configuration production",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "electron": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder build",
    "postinstall": "electron-builder install-app-deps",
    "prepare": "husky install",
    "postversion": "git push origin HEAD && git push origin v$npm_package_version"
  },
  "main": "electron.js",
  "build": {
    "appId": "com.vtabary.translatol",
    "productName": "Translatol",
    "copyright": "Copyright Â© 2021 Vincent Tabary",
    "files": [
      "dist/translatol",
      "src/electron",
      "electron.js"
    ],
    "directories": {
      "buildResources": "./build",
      "output": "./dist/packages/${os}/${arch}"
    },
    "win": {
      "icon": "./build/icon.png",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "nsis": {},
    "linux": {
      "icon": "./build/icon.png",
      "category": "Utility",
      "target": [
        {
          "target": "deb",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "publish": [
        {
          "provider": "github"
        }
      ]
    }
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~12.2.3",
    "@angular/common": "~12.2.3",
    "@angular/compiler": "~12.2.3",
    "@angular/core": "~12.2.3",
    "@angular/forms": "~12.2.3",
    "@angular/platform-browser": "~12.2.3",
    "@angular/platform-browser-dynamic": "~12.2.3",
    "@angular/router": "~12.2.3",
    "@cds/core": "^5.5.2",
    "@clr/angular": "12.0.2",
    "@clr/ui": "^12.0.2",
    "@electron/remote": "^1.2.1",
    "@vtabary/xliff2js": "0.2.1",
    "@webcomponents/custom-elements": "^1.0.0",
    "fast-glob": "^3.2.7",
    "lodash": "^4.17.15",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~12.2.3",
    "@angular-eslint/builder": "12.3.1",
    "@angular-eslint/eslint-plugin": "12.3.1",
    "@angular-eslint/eslint-plugin-template": "12.3.1",
    "@angular-eslint/schematics": "12.3.1",
    "@angular-eslint/template-parser": "12.3.1",
    "@angular/cli": "~12.2.3",
    "@angular/compiler-cli": "~12.2.3",
    "@angular/language-service": "~12.2.3",
    "@angular/localize": "12.2.3",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/lodash": "^4.14.172",
    "@types/node": "^14",
    "@typescript-eslint/eslint-plugin": "4.28.2",
    "@typescript-eslint/parser": "4.28.2",
    "electron": "^15.5.5",
    "electron-builder": "^22.0.0",
    "eslint": "^7.26.0",
    "husky": ">=6",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.14",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": ">=10",
    "prettier": "^2.3.2",
    "protractor": "~7.0.0",
    "ts-node": "~7.0.0",
    "tslint": "~6.1.0",
    "typescript": "~4.3.5"
  }
}
